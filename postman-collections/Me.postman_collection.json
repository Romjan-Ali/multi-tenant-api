{
  "info": {
    "_postman_id": "3e07ddc8-b47f-4ba0-8dce-370f5c440e0f",
    "name": "Me",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Current User (Me)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "{{authorization_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/me",
          "host": ["{{base_url}}"],
          "path": ["me"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status is 200', () => {",
              "  pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('User profile returned', () => {",
              "  const res = pm.response.json();",
              "  pm.expect(res.data).to.have.property('email');",
              "});"
            ]
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "https://multi-tenant-api-xll7.onrender.com/api/auth"
    },
    {
      "key": "authorization_token",
      "value": ""
    }
  ]
}
